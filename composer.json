{
  "name": "easir/coding-standard",
  "type": "phpcodesniffer-standard",
  "description": "The EASI'R Coding Standard is a set of PHPCS rules applied to all EASI'R projects.",
  "keywords": [
    "doctrine",
    "coding",
    "standard",
    "cs",
    "code",
    "style",
    "sniffer",
    "rules",
    "sniffs",
    "checks"
  ],
  "license": "MIT",
  "authors": [
    {"name": "MichaÅ‚ Brzuchalski", "email": "mbr@easir.com"},
    {"name": "Adrian Modliszewski", "email": "ad@easir.com"},
    {"name": "Adam Marchewicz", "email": "am@easir.com"}
  ],
  "autoload": {
    "psr-0": {
      "Easir\\Sniffs\\": "src/"
    }
  },
  "require": {
    "php": ">=7.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "doctrine/coding-standard": "^9",
    "squizlabs/php_codesniffer": "^3.5.8"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
